<form xmlns:i18nxmlns="http://www.w3.org/1999/xhtml"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="Kotti"
    class="navbar-form navbar-right"
    action="${api.url(api.root)}@@search-results"
    method="post"
    id="form-search">
    <div class="form-group">
    <input
        type="text"
        name="search-term"
        class="form-control search-query"
        placeholder="Search..."
        i18n:attributes="placeholder" />
    </div>
    <button
        type="submit"
        name="search-submit"
        value="search"
        class="btn btn-default"
    style="display: none;">&#8594;</button>
</form>
